@model NetSystem.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ورود";
}

<h1>ورود به سامانه</h1>
<hr />
<div>
    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="text-danger">@ViewData["ErrorMessage"]</div>
            }
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="RememberMe"></label> &nbsp;
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe" class="text text-danger"></span>
                </div>

                <input type="submit" value="ورود به سامانه" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

