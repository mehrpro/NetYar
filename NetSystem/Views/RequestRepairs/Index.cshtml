@model IEnumerable<NetSystem.Entity.RequestRepair>

@{
    ViewData["Title"] = "درخواست های جاری";
}

<h2>درخواست های جاری</h2>

@*<p>
    <a asp-action="Create" class="btn btn-primary">جدید</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestDataTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machinery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeofRepair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.RequestDataTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Machinery.MachineryTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeofRepair.TypeTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestTitle)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ID">ویرایش</a>
                <a asp-action="Details" class="btn btn-danger"  asp-route-id="@item.ID">جزئیات</a> 
            </td>
        </tr>
}
    </tbody>
</table>
