@model NetSystem.Entity.RequestRepair

@{
    ViewData["Title"] = "حذف";
}

<h2 class="text text-danger">حذف</h2>

<h3>شما مطمئن هستید که می خواهید این گزینه را حذف کنید؟</h3>
<div>
    <h4>درخواست تعمیر</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDelete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDelete)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Machinery)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Machinery.MachineryTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestDataTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestDataTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeofRepair)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeofRepair.TypeTitle)
