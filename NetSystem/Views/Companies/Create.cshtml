@model NetSystem.Entity.Company

@{
    ViewData["Title"] = "جدید";
}

<h2>جدید</h2>

<h4>شرکت</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompnayIndex" class="control-label"></label>
                <input asp-for="CompnayIndex" class="form-control" />
                <span asp-validation-for="CompnayIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyTiltle" class="control-label"></label>
                <input asp-for="CompanyTiltle" class="form-control" />
                <span asp-validation-for="CompanyTiltle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
