@model IEnumerable<NetSystem.Entity.Company>

@{
    ViewData["Title"] = "شرکت ها";
}

<h2>شرکت ها</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompnayIndex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyTiltle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompnayIndex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyTiltle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">ویرایش</a> |
                    @*<a asp-action="Details" asp-route-id="@item.ID">Details</a> |*@
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
