@model NetSystem.Entity.Group

@{
    ViewData["Title"] = "جدید";
}

<h2>جدید</h2>

<h4>گروه اصلی</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyID_FK" class="control-label"></label>
                <select asp-for="CompanyID_FK" class="form-control" asp-items="ViewBag.CompanyID_FK"></select>
            </div>
            <div class="form-group">
                <label asp-for="GroupIndex" class="control-label"></label>
                <input asp-for="GroupIndex" class="form-control" />
                <span asp-validation-for="GroupIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupTitle" class="control-label"></label>
                <input asp-for="GroupTitle" class="form-control" />
                <span asp-validation-for="GroupTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
